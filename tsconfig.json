{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2016",
    "lib": [
      "es2017",
      "es6",
      "dom"
    ],
    "types": [
      "node",
      "mocha",
      "chai"
    ],
    "outDir": "build",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
